<%= render 'header' %>
<%= render 'left_sidebar' %>
<div class="content-wrapper">
  <div class="content-header sty-one">
    <h1>Заявки</h1>
    <ol class="breadcrumb">
      <li>
        <%= link_to "Главная", admin_path %>
      </li>
      <li><i class="fa fa-angle-right"></i> Полные заявки</li>
    </ol>
    <%= search_form_for(@q, url: bookings_admin_path , method: :get) do |f| %>
    <div class="row">
      <div class="col-2">
        <%= f.text_field :lastname_cont, class: 'form-control', placeholder: "Фамилия" %>
      </div>
      <div class="col-2">
        <%= f.text_field :start_date_gteq, class: "form-control", placeholder: "Начало >=28-05-2020" %>
      </div>
      <div class="col-2">
        <%= f.text_field :start_date_lteq, class: "form-control", placeholder: "Начало <=28-05-2020" %>
      </div>
      <div class="col-2">
        <%= f.text_field :end_date_gteq, class: "form-control", placeholder: "Конец >= 28-05-2020" %>
      </div>
      <div class="col-2">
        <%= f.text_field :end_date_lteq, class: "form-control", placeholder: "Конец <= 28-05-2020" %>
      </div>
      <div class="col-2">
        <%= f.submit class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="content">
    <div class="container">
      <div class="row">
        <%= render "booking"  %>
      </div>
      <%= will_paginate @bookings %>
    </div>
  </div>
</div>
<%= render 'footer'  %>
