<%= render 'header' %>
<%= render 'left_sidebar' %>
  <div class="content-wrapper">
    <div class="content-header sty-one">
      <h1>Добавление статьи</h1>
      <ol class="breadcrumb">
        <li>
          <%= link_to 'Главная', admin_path %>
        </li>
        <li><i class="fa fa-angle-right"></i> <%= link_to 'Статьи', articles_admin_path %></li>
        <li><i class="fa fa-angle-right"></i> Добавление статьи</li>
      </ol>
    </div>
    <div class="content">
      <div class="row">
        <%= form_for @article do |f| %>
          <div class="col-12">
            <div class="card m-t-3">
              <div class="card-body">
                <h4 class="text-black">Добавление статьи</h4>
                <h3>Заголовок</h3>
                <%= f.text_field :title, class: "form-control" %>
                <h3>Description</h3>
                <%= f.text_field :description, class: "form-control" %>
                <h3>Текст</h3>
                <%= f.rich_text_area :text, rows: 10, placeholder: "Текст статьи", class: "form-control", required: true %>
                <div id="photos" style="text-align: center;">
                  <% if @article.image.attached? %>
                    <%= image_tag @article.image.variant(resize_to_limit: [500, nil]), class: "m-t-1" %>
                    <div class="form-group text-center" >
                      <span class="btn btn-default btn-file text-babu">
                        <i class="fa fa-cloud-upload" aria-hidden="true"></i> Выберите фото для статьи
                        <%= f.file_field :image %>
                      </span>
                    </div>
                  <% else %>
                    <div class="text-center m-b-3">
                      <%= image_pack_tag "media/images/no-photo.png", alt: "", title: "", style: "width: 300px; height: 300px;" %>
                    </div>
                    <span class="btn btn-default btn-file text-babu">
                      <i class="fa fa-cloud-upload" aria-hidden="true"></i> Выберите фото для статьи
                      <%= f.file_field :image %>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="text-center">
                <%= f.submit "Сохранить", class: "btn btn-outline-success" %>
              </div>
              <br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'footer'  %>
