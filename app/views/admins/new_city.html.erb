<%= render 'header' %>
<%= render 'left_sidebar' %>
  <div class="content-wrapper">
    <div class="content-header sty-one">
      <h1><%= @city.name %></h1>
      <ol class="breadcrumb">
        <li>
          <%= link_to 'Главная', admin_path %>
        </li>
        <li><i class="fa fa-angle-right"></i> <%= link_to 'Большие города', new_cities_admin_path %></li>
        <li><i class="fa fa-angle-right"></i> <%= @city.name %></li>
      </ol>
    </div>
    <div class="content">
      <div class="container">
        <div class="row">
          <%= form_for(@city) do |f| %>
            <div class="col-12">
              <div class="card m-t-3">
                <div class="card-body">
                  <h4 class="text-black"><%= @city.name %></h4>
                  <h3>Имя</h3>
                  <%= f.text_field :name, class: "form-control" %>
                  <h3>URL адрес</h3>
                  <%= f.text_field :url_name, class: "form-control" %>
                  <h3>Title</h3>
                  <%= f.text_field :title, class: "form-control" %>
                  <h3>Description</h3>
                  <%= f.text_field :description, class: "form-control" %>
                  <h3>Н1</h3>
                  <%= f.text_field :h1, class: "form-control" %>
                  <h3>Email</h3>
                  <%= f.text_field :email, class: "form-control" %>
                  <h3>Телефон</h3>
                  <%= f.text_field :phone, class: "form-control" %>
                  <h3>Адрес</h3>
                  <%= f.text_field :address, class: "form-control" %>
                  <h3>Яндекс</h3>
                  <%= f.text_field :yandex, class: "form-control" %>
                  <h3>Google</h3>
                  <%= f.text_field :google, class: "form-control" %>
                  <h3>Рабочее время</h3>
                  <%= f.text_field :work_time, class: "form-control" %>
                  <h3>Текст</h3>
                  <%= f.cktext_area :text, ckeditor: { language: 'ru'}, class: "form-control" %>
                  <div id="photos" style="text-align: center;">
                  <% if @city.background.attached? %>
                    <%= image_tag @city.background.variant(resize_to_limit: [500, nil]), class: "m-t-1" %>
                    <div class="form-group text-center" >
                      <span class="btn btn-default btn-file text-babu">
                        <i class="fa fa-cloud-upload" aria-hidden="true"></i> Выберите фото для фона
                        <%= f.file_field :background %>
                      </span>
                    </div>
                  <% else %>
                    <div class="text-center m-b-3">
                      <%= image_tag "no-photo.png", alt: "", title: "", style: "width: 300px; height: 300px;" %>
                    </div>
                    <div class="form-group text-center" >
                      <span class="btn btn-default btn-file text-babu">
                        <i class="fa fa-cloud-upload" aria-hidden="true"></i> Выберите фото для фона
                        <%= f.file_field :background %>
                      </span>
                    </div>
                  <% end %>
                </div>
                <div class="text-center">
                  <%= f.submit "Сохранить", class: "btn btn-outline-success" %>
                </div>
                <br>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'footer'  %>
