<%= render 'header' %>
<%= render 'left_sidebar' %>
  <div class="content-wrapper">
    <div class="content-header sty-one">
      <h1>Добавление страницы города</h1>
      <ol class="breadcrumb">
        <li>
          <%= link_to 'Главная', admin_path %>
        </li>
        <li><i class="fa fa-angle-right"></i> <%= link_to 'Автомобили', cars_admin_path %></li>
        <li><i class="fa fa-angle-right"></i> Добавление страницы города</li>
      </ol>
    </div>
    <div class="content">
      <div class="row">
        <%= form_for @delivery do |f| %>
          <div class="col-12">
            <div class="card m-t-3">
              <div class="card-body">
                <h4 class="text-black">Добавление страницы города</h4>
                <h3>Название города</h3>
                <%= f.text_field :city, class: "form-control" %>
                <h3>Текст</h3>
                <%= f.text_area :text, class: "form-control" %>
                <h3>Заголовок Н1</h3>
                <%= f.text_field :h1, class: "form-control" %>
                <h3>Цена доставки в рабочее время</h3>
                <%= f.text_field :price_work_time, class: "form-control" %>
                <h3>Цена доставки в нерабочее время</h3>
                <%= f.text_field :price_not_work_time, class: "form-control" %>
                <h3>Title</h3>
                <%= f.text_field :title, class: "form-control" %>
                <h3>Description</h3>
                <%= f.text_field :description, class: "form-control" %>
                <div id="photos" style="text-align: center;">
                  <% if @delivery.background.attached? %>
                    <%= image_tag @delivery.background.variant(resize_to_limit: [500, nil]), class: "m-t-1" %>
                  <% else %>
                    <div class="text-center m-b-3">
                      <%= image_pack_tag "media/images/no-photo.png", alt: "", title: "", style: "width: 300px; height: 300px;" %>
                    </div>
                    <div class="form-group text-center" >
                      <span class="btn btn-default btn-file text-babu">
                        <i class="fa fa-cloud-upload" aria-hidden="true"></i> Выберите фото для фона
                        <%= f.file_field :background %>
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="text-center">
                <%= f.submit "Сохранить", class: "btn btn-outline-success" %>
              </div>
              <br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'footer'  %>
