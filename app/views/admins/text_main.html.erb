                </div>
                <%= f.submit "Сохранить", class: "btn btn-outline-success" %>
              </div>
            </div>
          </div>
          <div class="col-12">
            <div class="card m-t-3">
              <div class="card-body">
                <div class="click2edit m-b-3">
                  <h4>Заголовок Вопрос 2</h4>
                  <%= f.cktext_area :main_question_title_2, style: "min-width: 800px;", rows: "1" %>
