 <% @cars.where(active:true).each do |car| %> 
  <div class="avto1">
    <% if car.old_price_1 && car.old_price_1 > 0 %>
      <% if I18n.locale == :en %>
        <div class="badge"><span>Sale</span></div>
      <% else %>
        <div class="badge"><span>Акция</span></div>
      <% end %>
    <% end %>
    
    <% if car.main_image? %>
      <div class="bl_img" style="background-image: url(<%= image_path(car.main_image.url(:show))%>);"></div>
    <% else %>
      <div class="bl_img" style="background-image: url(<%= image_path('avto.webp')%>);"></div>
    <% end %>
    <% if I18n.locale == :en %>
      <div class="texx">
        <%= link_to car_en_path(car), class: "zg" do %>
          <%= car.car_name %>
        <% end %>
        <div class="hara">
          <div class="hr">
              <span>Capacity</span>
              <%= car.engine_capacity %> l
          </div>
          <div class="hr">
              <span>Transmission</span>
              Automatic
          </div>
          <div class="hr">
              <span>Air</span>
              Included 
          </div>
          <div class="hr">
              <span>Year</span>
              <%= car.year %>
          </div>
        </div>
        <div class="price">
          <span>from <b><i>1 300 ₽</i>/day</b></span>
          <div class="clear"></div>
        </div>
        <%= link_to car_en_path(car), class: "more" do %>
          More
        <% end %>
      </div>
    <% else %>
      <div class="texx">
        <%= link_to car_ru_path(car), class: "zg" do %>
          <%= car.car_name %>
        <% end %>
        <div class="hara">
            <div class="hr2 i1">
              <%= car.number_seats %> мест
            </div>
            <div class="hr2 i2">
              <% if I18n.locale == :en %>
                <% if car.transmission == 'Механика'%>
                  Manual
                <% else %>
                  Automatic
                <% end %>
              <% else %>
                <% if car.transmission == 'Механика'%>
                  Механика
                <% else %>
                  Автомат
                <% end %>
              <% end %>
            </div>
            <div class="hr2 i3">
              <%= car.year %> г.
            </div>
            <div class="hr2 i4">
              <% if I18n.locale == :en && car.fuel == "Бензин" %>
                Gasoline
              <% elsif I18n.locale == :en && car.fuel == "Дизель" %>
                Diesel
              <% else %>
                <%= car.fuel %>
              <% end %>
            </div>
        </div>
        <p>Расход на 100 км – 9.2 л.</p>
        <p>Расход на 100 км – 9.2 л.</p>
        <p>Расход на 100 км – 9.2 л.</p>
        <div class="price">
          <span>от <b><i><%= number_to_currency(car.price_main, {delimiter: " ", precision: 0, unit: ''}) %> ₽</i>/сутки</b></span>
          <div class="clear"></div>
        </div>
        <%= link_to car_ru_path(car), class: "more" do %>
          Подробнее
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>