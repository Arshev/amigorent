                      </tr>
                      <tr>
                        <th>Length</th>
                        <td><%= @car.length %></td>
                        <th>Outrigger steering</th>
                        <td><%= @car.steering_wheel_adjustment ? "Yes" : "No" %></td>
                      </tr>
                      <tr>
                        <th>Width</th>
                        <td><%= @car.width %></td>
                        <th>Climate control</th>
                        <td><%= @car.climat %></td>
                      </tr>
                      <tr>
                        <th>Height</th>
