                        <%= image_tag "ra0.png", alt: "Рейтинг", title: "Рейтинг" %>
                    <% when 2.0 %>
                        <% 2.times do %>
                            <%= image_tag "ra1.png", alt: "Рейтинг", title: "Рейтинг" %>
