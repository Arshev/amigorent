                        <%= image_tag "ra0.png", alt: "Рейтинг", title: "Рейтинг" %>
                    <% end %>
                </div>
                <p>
                    <%= image_tag "i1.png", alt: "Transmission", title: "Transmission" %>
                    Transmission:
                    <% if @car.transmission == 'Механика' %>
                        <span>Manual</span>
                    <% elsif @car.transmission == 'Автомат' %>
                        <span>Automatic</span>
                    <% else %>
                        <span><%= @car.transmission %></span>
                    <% end %>
                </p>
                <p>
                    <%= image_tag "i2.png", alt: "Color", title: "Color" %>
                    Color:
                    <span><%= @car.color %></span>
                </p>
                <p>
                    <%= image_tag "i3.png", alt: "Fuel Type", title: "Fuel Type" %>
                    Fuel Type:
                    <% if @car.fuel == 'Бензин' %>
                        <span>Gasoline</span>
                    <% elsif @car.fuel == 'Дизель' %>
                        <span>Dizel</span>
                    <% else %>
                        <span><%= @car.fuel %></span>
                    <% end %>
                </p>
                <p>
                    <%= image_tag "i4.png", alt: "Year of release", title: "Year of release" %>
                    Year of release:
                    <span><%= @car.year %></span>
                </p>
                <p>
                    <%= image_tag "i5.png", alt: "Engine capacity", title: "Engine capacity" %>
                    Engine capacity:
                    <span><%= @car.engine_capacity %>l</span>
                </p>
                <p>
                    <%= image_tag "i6.png", alt: "Body type", title: "Body type" %>
                    Body type:
                    <% if @car.car_type == "Хэтчбек" %>
                        <span>Hatchback</span>
                    <% elsif @car.car_type == "Седан" %>
                        <span>Sedan</span>
                    <% elsif @car.car_type == "Универсал" %>
                        <span>Touring</span>
                    <% elsif @car.car_type == "Минивен" %>
                        <span>Minivan</span>
                    <% elsif @car.car_type == "Кроссовер" %>
                        <span>Crossover</span>
                    <% elsif @car.car_type == "Купе" %>
                        <span>Coupe</span>
                    <% else %>
                        <span><%= @car.car_type %></span>
                    <% end %>
                </p>
                <p>
                    <%= image_tag "i7.png", alt: "Number of Doors", title: "Number of Doors" %>
                    Number of Doors:
                    <span><%= @car.number_doors %></span>
                </p>
                <p>
                    <%= image_tag "i8.png", alt: "Air conditioning", title: "Air conditioning" %>
                    Air conditioning:
                    <% if @car.is_air %>
                        <span>Yes</span>
                    <% else %>
                        <span>No</span>
                    <% end %>
                </p>
                <p>
                    <%= image_tag "i9.png", alt: "Electrical package", title: "Electrical package" %>
                    Electrical package:
                    <% if @car.is_electropackage %>
                        <span>Yes</span>
                    <% else %>
                        <span>No</span>
                    <% end %>
                </p>
                <div class="price">от <b><%= @car.price_main %></b> rubles/day</div>
                <%= link_to "Book now", new_booking_path(car_id: @car.id), class:"bron" %>
            </div>
            <div class="clear"></div>
            <div class="perek active" id="pere1">
                <h3>Prices</h3>
                <div class="table-wrap-tth">
                    <table class="blueTable" style="font-size: 1em;">
                        <thead>
                            <tr>
                                <th>up to 3 days</th>
                                <th>4-7 days</th>
                                <th>8-14 days</th>
                                <th>15-30 days</th>
                                <th>> 30 days</th>
                                <th>Deposit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div style="<%= @car.old_price_1 ? "color: red;" : "" %>">
                                        <%= @car.price_1 %>
                                    </div>
                                    <% if @car.old_price_1 %>
                                        <div>
                                            <s><small><%= @car.old_price_1 %></s></small>
                                        </div>
                                    <% end %>
                                </td>
                                <td>
                                    <div style="<%= @car.old_price_2 ? "color: red;" : "" %>">
                                        <%= @car.price_2 %>
                                    </div>
                                    <% if @car.old_price_2 %>
                                        <div>
                                            <small><s><%= @car.old_price_2 %></s></small>
                                        </div>
                                    <% end %>
                                </td>
                                <td>
                                    <div style="<%= @car.old_price_3 ? "color: red;" : "" %>">
                                        <%= @car.price_3 %>
                                    </div>
                                    <% if @car.old_price_3 %>
                                        <div>
                                            <small><s><%= @car.old_price_3 %></s></small>
                                        </div>
                                    <% end %>
                                </td>
                                <td>
                                    <div style="<%= @car.old_price_4 ? "color: red;" : "" %>">
                                        <%= @car.price_4 %>
                                    </div>
                                    <% if @car.old_price_4 %>
                                        <div>
                                            <small><s><%= @car.old_price_4 %></s></small>
                                        </div>
                                    <% end %>
                                </td>
                                <td>
                                    <div style="<%= @car.old_price_5 ? "color: red;" : "" %>">
                                        <%= @car.price_5 %>
                                    </div>
                                    <% if @car.old_price_5 %>
                                        <div>
                                            <small><s><%= @car.old_price_5 %></s></small>
                                        </div>
                                    <% end %>
                                </td>
                                <td>
                                    <div>
                                        <%= @car.deposit %>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <p><%= @car.description %></p>
                <% if @car.youtube && @car.youtube != "" %>
                    <div style="text-align:center;">
                        <h3>Video about the car</h3>
                        <div class="thumb-wrap">
                            <iframe width="800" height="400" src="<%= @car.youtube %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    </div>
                <% end %>
                <div class="table-wrap-tth">
                    <table class="table-tth" style="margin:auto;">
                    <!--Table head-->
                    <thead>
                      <tr>
                        <th colspan="2">Technical Data</th>
                        <th colspan="2">Comfort</th>
                      </tr>
                    </thead>
                    <!--Table head-->
                    <!--Table body-->
                    <tbody style="text-align:left;">
                      <tr style="border: 1px solid black;">
                        <th>Type of fuel</th>
                        <td><%= @car.fuel_type %></td>
                        <th>Seats</th>
                        <td><%= @car.number_seats %></td>
                      </tr>
                      <tr>
                        <th>Engine capacity</th>
                        <td><%= @car.engine_capacity %></td>
                        <th>Electrically adjustable seats</th>
                        <td><%= @car.power_seats ? "Yes" : "No" %></td>
                      </tr>
                      <tr>
                        <th>Power</th>
                        <td><%= @car.power %></td>
                        <th>Power mirrors</th>
                        <td><%= @car.mirror ? "Yes" : "No" %></td>
                      </tr>
                      <tr>
                        <th>Consumption (highway / mixed / city)</th>
                        <td><%= @car.consumption %></td>
                        <th>Front power windows</th>
                        <td><%= @car.power_window_front ? "Yes" : "No" %></td>
                      </tr>
                      <tr>
