                      </tr>
                      <tr>
                    </tbody>
                    <!--Table body-->
                  </table>
                  <div style="text-align:center;">
                    <%# @car.tth_note %>
                  </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="bl_ostav">
                <div class="zg">Fill in the form to leave a review</div>
                <%= form_with(model: @new_review, url: [@car, @new_review], local: true) do |f| %>
                    <%= f.text_field :fullname, placeholder: "Name *", required: true %>
                    <%= f.text_field :phone, placeholder: "Phone", required: true %>
                    <%= f.text_field :email, placeholder: "Email *", required: true %>
                    <div class="clear"></div>
                    <div id="rateYo" style="margin:10px;"></div>
                    <%= f.text_area :text, placeholder: "Review text", required: true %>
                    <%= f.hidden_field :star, id:"star_counter", value:"5" %>
                    <%# recaptcha_v3(action: 'create') %>
                    <%= recaptcha_tags %>
                    <%= f.submit "Send" %>
                <% end %>
                <div class="clear"></div>
            </div>
            <div class="bl_otz">
                <div class="zag">Reviews</div>
                <%= render "review" %>
            </div>
            <div class="clear"></div>
