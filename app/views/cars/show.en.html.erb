            <div class="pol1" id="side-block">
                <h1><%= @car.car_name %></h1>
                <div class="bir">
                    <% if @car.car_class == "Эконом" %>
                        Economy
                    <% elsif @car.car_class == "Средний" %>
                        Middle
                    <% elsif @car.car_class == "Минивены" %>
                        Minivans
                    <% elsif @car.car_class == "Кроссоверы" %>
                        Crossovers
                    <% elsif @car.car_class == "Бизнес" %>
                        Business
                    <% elsif @car.car_class == "Коммерческий" %>
                        Commercial vehicle
                    <% else %>
                        <%= @car.car_class %>
                    <% end %>
                </div>
                <div class="bl_full" style="margin-top: 100px;">
                    <% if @car.old_price_1 %>
                        <div class="badge">
                            <%= image_tag "badge.png", alt: "Sales", title: "Sales" %>
                        </div>
                    <% end %>
                    <div class="fotorama" data-nav="thumbs" data-thumbwidth="100" data-thumbheight="100">
