<% title @car_title %>
<% description @car_description %>
<%= render 'shared/header', cached: true %>
<div class="content">
    <div class="wrapper">
        <%= render 'shared/bread'%>
        <div class="bl_avto">
            <div class="pol1" id="side-block">
                <h1><%= @car.car_name %></h1>
                <div class="bir"><%= @car.car_class %></div>
                <div class="bl_full" style="margin-top: 100px;">
                    <% if @car.old_price_1 %>
                        <div class="badge">
                            <%= image_tag "badge.png", alt: "", title: "" %>
                        </div>
                    <% end %>
                    <div class="fotorama" data-nav="thumbs" data-thumbwidth="100" data-thumbheight="100">
                        <%= image_tag @car.main_image, alt: @car.car_name, title: @car.car_name %>
                        <% @car.images.each do |image| %>
                            <%= image_tag image, alt: @car.car_name, title: @car.car_name %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="pol2">
                <div class="zg">Спецификация:</div>
                <div class="rating">
                    Рейтинг модели:
                    <%= image_tag "ra1.png", alt: "", title: "" %>
                    <%= image_tag "ra1.png", alt: "", title: "" %>
                    <%= image_tag "ra1.png", alt: "", title: "" %>
                    <%= image_tag "ra1.png", alt: "", title: "" %>
                    <%= image_tag "ra0.png", alt: "", title: "" %>
                </div>
                <p>
                    <%= image_tag "i1.png", alt: "", title: "" %>
                    Коробка передач:
                    <span><%= @car.transmission %></span>
                </p>
                <p>
                    <%= image_tag "i2.png", alt: "", title: "" %>
                    Цвет кузова:
                    <span><%= @car.color %></span>
                </p>
                <p>
                    <%= image_tag "i3.png", alt: "", title: "" %>
                    Вид топлива:
                    <span><%= @car.fuel %></span>
                </p>
                <p>
                    <%= image_tag "i4.png", alt: "", title: "" %>
                    Год выпуска:
                    <span><%= @car.year %></span>
                </p>
                <p>
                    <%= image_tag "i5.png", alt: "", title: "" %>
                    Объем двигателя:
                    <span><%= @car.engine_capacity %>л</span>
                </p>
                <p>
                    <%= image_tag "i6.png", alt: "", title: "" %>
                    Тип кузова:
                    <span><%= @car.car_type %></span>
                </p>
                <p>
                    <%= image_tag "i7.png", alt: "", title: "" %>
                    Количество дверей:
                    <span><%= @car.number_doors %></span>
                </p>
                <p>
                    <%= image_tag "i8.png", alt: "", title: "" %>
                    Кондиционер:
                    <% if @car.is_air %>
                        <span>Есть</span>
                    <% else %>
                        <span>Нет</span>
                    <% end %>
                </p>
                <p>
                    <%= image_tag "i9.png", alt: "", title: "" %>
                    Электропакет:
                    <% if @car.is_electropackage %>
                        <span>Есть</span>
                    <% else %>
                        <span>Нет</span>
                    <% end %>
                </p>
                <div class="price">от <b><%= @car.price_main %></b> руб/сутки</div>
                <%= link_to "Забронировать", new_booking_path(car_id: @car.id), class:"bron" %>
            </div>
            <div class="clear"></div>
            <div class="bl_perekl">
                <a href="#" class="active" data-per="pere1">Описание</a>
                <a href="#" data-per="pere2">Цены</a>
                <a href="#" data-per="pere3">ТТХ</a>
            </div>
            <div class="perek active" id="pere1">
                <p><%= @car.description %></p>
                <% if @car.youtube %>
                    <div style="text-align:center;">
                        <h3>Видео об автомобиле</h3>
                        <iframe width="800" height="400" src="<%= @car.youtube %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                <% end %>
                <div class="clear"></div>
            </div>
            <div class="perek" id="pere2">
                <table class="table table-bordered text-center">
                    <thead>
                        <h3>Цены на аренду</h3>
                    </thead>
                    <tbody>
                        <tr class="prices-single-car-header">
                            <td class="prices-table-header">до 3 суток</td>
                            <td class="prices-table-header">4-7 суток</td>
                            <td class="prices-table-header">8-14 суток</td>
                            <td class="prices-table-header">15-30 суток</td>
                            <td class="prices-table-header">> 30 суток</td>
                            <td class="prices-table-header">Залог</td>
                        </tr>
                        <tr>
                            <td>
                                <div>
                                    <%= @car.price_1 %> рублей
