        </div>
        <div class="clear"></div>
    </div>
</div>
<div class="block4 var2">
    <div class="wrapper">
        <div class="zagol"><h1><%= @text.aeroport_avto %></h1></div>
        <div class="spis_avto active" id="spis1">
            <%= render 'cars', cached: true %>
