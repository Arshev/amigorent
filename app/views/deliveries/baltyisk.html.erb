<% title @text.baltyisk_title %>
<% description @text.baltyisk_description %>
<%= render 'shared/header', cached: true %>
  <div class="bl_topp" style="background:url(<%= asset_path("bg_zelenogradsk.jpg")%>) no-repeat center top transparent;">
    <div class="wrapper">
      <h1><%= @text.baltyisk_h1 %></h1>
      <%= render 'advantages' %>
    </div>
  </div>
  <div class="content">
      <div class="wrapper">
          <div class="bread">
              <a href="/">Главная /</a> Балтийск
          </div>
          <div class="bl_dop">
              <h1>Цены на доставку в Балтийск</h1>
              <table class="var2">
                  <thead>
                      <tr>
                          <td rowspan="2">Пункт доставки/возврата</td>
                          <td colspan="2">Цена, руб.</td>
                      </tr>
                      <tr>
                          <td>09:00 - 19:00</td>
                          <td>19:00 - 09:00</td>
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                          <td>Балтийск</td>
                          <td><%= @text.baltyisk_price %></td>
                          <td><%= @text.baltyisk_price_unwork %></td>
                      </tr>
                  </tbody>
              </table>
              <div class="clear"></div>
          </div>
          <div class="bl_full_text">
              <%= @text.baltyisk_text.html_safe %>
              <div class="clear"></div>
          </div>
          <br />
          <div class="block4">
              <div class="wrapper">
                  <div class="zag"><%= @text.baltyisk_avto %></div>
                  <div class="spis_avto">
                      <%= render "cars"%>
                      <div class="clear"></div>
                  </div>
                  <%= link_to "Посмотреть все автомобили", cars_path, class: "all" %>
                  <div class="clear"></div>
              </div>
          </div>
          <div class="clear"></div>
      </div>
  </div>
<%= render 'shared/footer', cached: true %>
