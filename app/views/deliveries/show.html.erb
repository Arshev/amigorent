<% title @delivery_title %>
<% description @delivery_description %>
<%= render 'shared/header', cached: true %>
<div class="bl_topp" style="background: url(<%= url_for(@delivery.background.variant(resize_to_fill: [1920, 558])) if @delivery.background.attached? %>) no-repeat center top transparent;">
    <div class="wrapper">
      <h1><%= @delivery.h1 %></h1>
      <div class="blcks">
          <div class="blck">
            <%= image_tag "topp.png", alt: "", title: "" %>
            Низкие цены
          </div>
          <div class="blck">
            <%= image_tag "topp.png", alt: "", title: "" %>
            Надежный автопарк
          </div>
          <div class="blck">
            <%= image_tag "topp.png", alt: "", title: "" %>
            Скидки
          </div>
          <div class="blck">
            <%= image_tag "topp.png", alt: "", title: "" %>
            По Калининградской области доставка бесплатно
          </div>
          <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
</div>
<div class="content">
    <div class="wrapper">
        <div class="bread">
            <a href="/">Главная /</a> <a href="/deliveries">Доставка /</a> <%= @delivery.city %>
        </div>
        <div class="bl_dop">
            <h1>Цены на доставку в <%= @delivery.city %></h1>
            <table class="var2">
                <thead>
                    <tr>
                        <td rowspan="2">Пункт доставки/возврата</td>
                        <td colspan="2">Цена, руб.</td>
                    </tr>
                    <tr>
                        <td><%= @dop_table_worktime %></td>
                        <td><%= @dop_table_endtime %></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= @delivery.city %></td>
                        <td><%= @delivery.price_work_time %></td>
                        <td><%= @delivery.price_not_work_time %></td>
                    </tr>
                </tbody>
            </table>
            <div class="clear"></div>
        </div>
        <div class="bl_full_text">
            <%= @delivery.text %>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<%= render 'shared/footer', cached: true %>
