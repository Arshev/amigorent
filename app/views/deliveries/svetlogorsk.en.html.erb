<% title @text.svetlogorsk_title_en %>
<% description @text.svetlogorsk_description_en %>
<%= render 'shared/header', cached: true %>
<div class="block_price">
    <div class="wrapper">
        <span></span>
        <div class="text1">With us you are always at the helm!</div>
        <div class="text2"><b>Car rental</b> at Svetlogorsk</div>
        <div class="text3">Svetlogorsk</div>
        <%= link_to prices_path(locale: I18n.locale), class: "ceny" do %>
            Rental prices
        <% end %>
        <div class="clear"></div>
    </div>
</div>
<div class="block2 var2">
    <div class="wrapper" id="search_cars">
        <div class="zagol" style="padding-top: 30px;"><h1>Car rental at Svetlogorsk</h1></div>
        <search_cars city="Калининград"></search_cars>
        <div class="clear"></div>
    </div>
</div>
<div class="content for_price">
    <div class="wrapper">
        <div class="bl_dostavka">
            <div class="zagol"><h2>Prices for delivery to Svetlogorsk</h2></div>
            <table>
                <thead>
                    <tr>
                        <th>Delivery / Return Point</th>
                        <th><b><%= @text.dop_table_worktime %></b></th>
                        <th><b><%= @text.dop_table_endtime %></b></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Svetlogorsk</td>
                        <td><%= @text.svetlogorsk_price %></td>
                        <td><%= @text.svetlogorsk_price_unwork %></td>
                    </tr>
                </tbody>
            </table>
            <div class="kak_nayti">
                <%= @text.svetlogorsk_text_en.html_safe %>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class="block4 var2">
    <div class="wrapper">
        <div class="zagol"><%= @text.svetlogorsk_avto_en %></div>
        <div class="spis_avto active" id="spis1">
            <%= render 'cars', cached: true %>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<%= render 'shared/footer', cached: true %>
