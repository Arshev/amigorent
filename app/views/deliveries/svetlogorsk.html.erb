<% title @text.svetlogorsk_title %>
<% description @text.svetlogorsk_description %>
<%= render 'shared/header', cached: true %>
  <div class="bl_topp" style="background:url(<%= asset_path("bg_zelenogradsk.jpg")%>) no-repeat center top transparent;">
    <div class="wrapper">
      <h1><%= @text.svetlogorsk_h1 %></h1>
      <div class="blcks">
          <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <div class="content">
      <div class="wrapper">
          <div class="bread">
              <a href="/">Главная /</a> Светлогорск
          </div>
          <div class="bl_dop">
              <h1>Цены на доставку в Светлогорск</h1>
              <table class="var2">
                  <thead>
                      <tr>
                          <td rowspan="2">Пункт доставки/возврата</td>
                          <td colspan="2">Цена, руб.</td>
                      </tr>
                      <tr>
                          <td>09:00 - 19:00</td>
                          <td>19:00 - 09:00</td>
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                          <td>Светлогорск</td>
                          <td><%= @text.svetlogorsk_price %></td>
                          <td><%= @text.svetlogorsk_price_unwork %></td>
                      </tr>
                  </tbody>
              </table>
              <div class="clear"></div>
          </div>
          <div class="bl_full_text">
              <%= @text.svetlogorsk_text %>
              <div class="clear"></div>
          </div>
          <br />
          <div class="block4">
              <div class="wrapper">
                  <div class="zag"><%= @text.svetlogorsk_avto %></div>
                  <div class="spis_avto">
                      <%= render "cars"%>
                      <div class="clear"></div>
                  </div>
                  <%= link_to "Посмотреть все автомобили", cars_path, class: "all" %>
                  <div class="clear"></div>
              </div>
          </div>
          <div class="clear"></div>
      </div>
  </div>
<%= render 'shared/footer', cached: true %>
