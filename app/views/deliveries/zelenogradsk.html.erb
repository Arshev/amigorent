<% title @delivery_title %>
<% description @delivery_description %>
<%= render 'shared/header', cached: true %>
  <div class="bl_topp" style="background:url(<%= asset_path("bg_zelenogradsk.jpeg")%>) no-repeat center top transparent;">
    <div class="wrapper">
      <h1>Аренда авто в Зеленоградске</h1>
      <div class="blcks">
          <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <div class="content">
      <div class="wrapper">
          <div class="bread">
              <a href="/">Главная /</a> <a href="/deliveries">Доставка /</a> Зеленоградск
          </div>
          <div class="bl_dop">
              <h1>Цены на доставку в Зеленоградск</h1>
              <table class="var2">
                  <thead>
                      <tr>
                          <td rowspan="2">Пункт доставки/возврата</td>
                          <td colspan="2">Цена, руб.</td>
                      </tr>
                      <tr>
                          <td><%= @dop_table_worktime %></td>
                          <td><%= @dop_table_endtime %></td>
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                          <td>Зеленоградск</td>
                          <td><%# @delivery.price_work_time %></td>
                          <td><%# @delivery.price_not_work_time %></td>
                      </tr>
                  </tbody>
              </table>
              <div class="clear"></div>
          </div>
          <div class="block4">
              <div class="wrapper">
                  <div class="zag">Найдём машину для каждого!</div>
                  <div class="podzag">У нас большой ассортимент автомобилей.</div>
                  <div class="spis_avto">
                      <%= render "cars"%>
                      <div class="clear"></div>
                  </div>
                  <%= link_to "Посмотреть все автомобили", cars_path, class: "all" %>
                  <div class="clear"></div>
              </div>
          </div>
          <div class="bl_full_text">
              <%# @delivery.text %>
              <div class="clear"></div>
          </div>
          <div class="clear"></div>
      </div>
  </div>
<%= render 'shared/footer', cached: true %>
