 <% @cars.where(active:true, show_on_main: true).each do |car| %> 
  <div class="avto">
    <% if I18n.locale == :en %>
      <%= link_to car_en_path(car), class: "bl_img", 'data-turbolinks': false do %>
        <%= image_tag car.main_image.url(:show), alt: "#{car.car_name}", title: "#{car.car_name}" if car.main_image? %>
      <% end %>
      <%= link_to car_en_path(car), class: "zg", 'data-turbolinks': false do %>
        <%= car.car_name %>
      <% end %>
      <div class="price">от <b><%= car.price_main %></b> руб/сутки</div>
      <%= link_to car_en_path(car), class: "more", 'data-turbolinks': false do %>
        More
      <% end %>
    <% else %>
      <%= link_to car_ru_path(car), class: "bl_img", 'data-turbolinks': false do %>
        <%= image_tag car.main_image.url(:show), alt: "#{car.car_name}", title: "#{car.car_name}" if car.main_image? %>
      <% end %>
      <%= link_to car_ru_path(car), class: "zg", 'data-turbolinks': false do %>
        <%= car.car_name %>
      <% end %>
      <div class="price">от <b><%= car.price_main %></b> руб/сутки</div>
      <%= link_to car_ru_path(car), class: "more", 'data-turbolinks': false do %>
        Подробнее
      <% end %>
    <% end %>
    <div class="hara">
        <p>
            <% if car.transmission == 'Механика'%>
              <%= image_tag "transmission.png", style: "width: 20px;", alt: "Механика", title: "Механика" %>
              Механика
            <% else %>
              <%= image_tag "transmission.png", style: "width: 20px;", alt: "Автомат", title: "Автомат" %>
              Автомат
            <% end %>
          </p>
          <p>
            <%= image_tag "fuel.png", style: "width: 20px;", alt: "Вид топлива", title: "Вид топлива" %>
            <%= car.fuel %>
          </p>
          <p>
            <%= image_tag "year.png", style: "width: 20px;", alt: "Год выпуска", title: "Год выпуска" %>
            <%= car.year %> г.
          </p>
          <p>
            <%= image_tag "car_type.png", style: "width: 20px;", alt: "Тип кузова", title: "Тип кузова" %>
            <%= car.car_type %>
          </p>
          <p>
            <%= image_tag "capacity.png", style: "width: 20px;", alt: "Объем двигателя", title: "Объем двигателя" %>
            <%= car.engine_capacity %> л.
          </p>
          <p>
            <% if car.is_air %>
              <%= image_tag "snow.png", style: "width: 20px;", alt: "Кондиционер", title: "Кондиционер" %>
              Есть
            <% end %>
          </p>
    </div>
  </div>
<% end %>
