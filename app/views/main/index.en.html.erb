        <div style="margin-bottom: 30px;">
            Total reviews: <span itemprop="reviewCount"><%= Review.where(active: true).count %></span>, Average rating: <span itemprop="ratingValue"><%= Review.where(active: true).average(:star).round(1) %></span>
