      <meta itemprop="worstRating" content="1">
        <meta itemprop="bestRating" content="5">
      <meta itemprop="itemReviewed" content="Прокат автомобилей Амиго"/>
        <div class="zag">Отзывы</div>
        <div style="margin-bottom: 30px;">
            Всего отзывов: <span itemprop="reviewCount"><%= Review.where(active: true).count%></span>, средний рейтинг: <span itemprop="ratingValue"><%= Review.where(active: true).average(:star).round(1) %></span>
