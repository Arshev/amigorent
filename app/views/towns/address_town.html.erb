<% title @town.title %>
<% description @town.description %>
<%= render 'shared/city_header', city_name: @town.name, city_address: @town.address, city_phone: @town.phone, city_work_time: @town.work_time, cached: true %>
<% if @town.background.attached? %>
<div class="bl_topp" style="background:url(<%= url_for(@town.background) %>) no-repeat center top transparent;">
    <% else %>
    <div class="bl_topp" style="background:url(<%= asset_path("bg_zelenogradsk.jpg")%>) no-repeat center top transparent;">
        <% end %>
        <div class="wrapper">
            <h1><%= @town.h1 %></h1>
            <%= render 'advantages' %>
        </div>
    </div>
    <div class="content">
        <div class="wrapper">
            <div class="bread">
                <a href="/">Главная /</a> <%= @town.name %>
            </div>
            <div class="bl_full_text">
                <%= @town.text.html_safe %>
                <div class="clear"></div>
            </div>
            <br />
            <div class="block4">
                <div class="wrapper">
                    <div class="zag">Автомобили в аренду:</div>
                    <div class="spis_avto">
                        <%= render "cars"%>
                        <div class="clear"></div>
                    </div>
                    <%= link_to "Посмотреть все автомобили", cars_path, class: "all" %>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <%= render 'shared/footer', cached: true %>